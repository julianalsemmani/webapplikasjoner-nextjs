generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model Emploee {
  id            String  @id @unique @default(cuid())
  employeeNum   Int     @unique
  name          String
  rules         String
  day           Day[]
}

model Day {
  id            String  @id @default(cuid())
  name          String
  employee      Emploee @relation(fields: [employeeNum], references: [employeeNum])
  employeeNum   Int
  week          Week    @relation(fields: [weekId], references: [id])
  weekId        String
}

model Week {
  id        String  @id @default(cuid())
  week      Int
  day       Day[]
  year      Year    @relation(fields: [yearId], references: [id])
  yearId    String

}

model Year {
  id    String  @id @default(cuid())
  name  String  @unique
  week  Week[]
}
